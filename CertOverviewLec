<?php
function connectDB(){//Function to connect to database
	$servername = "localhost";
	$username = "root";
	$password = "";
	$db= "cert_reg_management_db";
	
	$conn = mysqli_connect($servername,$username,$password,$db);
	
	if(!$conn){
		die('Connection Failed: '.mysqli_connect_error());
	}
	return $conn;
}

$data = $_GET['data'];

$sql = "SELECT * FROM certifications WHERE name ='$data'";
$conn= connectDB();
$result = mysqli_query($conn,$sql);

if($result){
	$row = mysqli_fetch_assoc($result);
}

if(isset($_POST['update'])){
	header('Location: UpdateEmployee.php?data='.$row['staff_id'].'');
}

if(isset($_POST['delete'])){
	header('Location: deleteConfirm.php?data='.$row['staff_id'].'');
}
?>
<form method="POST">

<table class="center">
	<tr><td><p><strong>Certification Name:</strong></p></td><td><p><?php echo $row['cert_name'];?></p></td></tr>
	<tr><td><p><strong>Description:</strong></p></td><td><p><?php echo $row['description'];?></p></td></tr>
	<tr><td><p><strong>Requirements:</strong></p></td><td><p><?php echo $row['requirements'];?></p></td></tr>
	<tr><td><p><strong>Schedule</strong></p></td><td><p><?php echo $row['schedule'];?></p></td></tr>
	<tr><td><p><strong>Cost</strong></p></td><td><p><?php echo $row['cost'];?></p></td></tr>
</table>
	<p><input type="submit" name="update" value="Update"></p>
	<p><input type="submit" name="delete" value="Delete"></p>
</form>
</fieldset>
